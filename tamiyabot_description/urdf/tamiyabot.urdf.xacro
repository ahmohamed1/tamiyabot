<?xml version="1.0"?>
<robot name="tamiyabot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find tamiyabot_description)/urdf/tamiyabot_gazebo.xacro"/>
    <!-- <xacro:include filename="$(find tamiyabot_description)/urdf/ros2_controller.xacro"/> -->

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <xacro:property name="base_length" value="0.3" />
    <xacro:property name="base_width" value="0.17" />
    <xacro:property name="base_height" value="0.02" />
    <xacro:property name="base_mass" value="2.5" /> <!--Kg-->

    <!-- Wheel link dimensions -->
    <xacro:property name="wheel_radius" value="0.0415" />
    <xacro:property name="wheel_thickness" value="0.021" />
    <xacro:property name="wheel_mass" value="1" />
    <xacro:property name="wheel_down" value="-0.052" />
    <!-- Properties -->
    <xacro:property name="steer_effort" value="1000.0"/>
    <xacro:property name="steer_velocity" value="5.0"/>
    <xacro:property name="steer_limit_deg" value="45.0"/>
    <!-- Math constants -->
    <xacro:property name="deg_to_rad" value="0.01745329251994329577"/>

    <link name="base_footprint"/>

    <link name="base_link">
        <inertial>
            <mass value="1.5"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.3 0.17 0.02"/>
            </geometry>
            <material name="yellow"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.3 0.17 0.02"/>
            </geometry>
        </collision>
    </link>

    <link name="front_left_wheel">
        <inertial>
            <mass value="1.5"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_thickness}"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_thickness}"/>
            </geometry>
        </collision>
    </link>

    <link name="left_kingpin">
        <inertial>
            <mass value="1.5"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.01" length="0.02"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.01" length="0.02"/>
            </geometry>
        </collision>
    </link>

    <link name="right_kingpin">
        <inertial>
            <mass value="1.5"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.01" length="0.02"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.01" length="0.02"/>
            </geometry>
        </collision>
    </link>

    <link name="front_right_wheel">
        <inertial>
            <mass value="1.5"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_thickness}"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_thickness}"/>
            </geometry>
        </collision>
    </link>

    <!-- rear wheels -->
    <link name="rear_left_wheel">
        <inertial>
            <mass value="1.5"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_thickness}"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_thickness}"/>
            </geometry>
        </collision>
    </link>

    <link name="rear_right_wheel">
        <inertial>
            <mass value="1.5"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_thickness}"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_thickness}"/>
            </geometry>
        </collision>
    </link>

    <!-- Define the joints -->
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.04" rpy="0.0 0.0 0.0"/>
    </joint>

    <!-- steering wheel joints -->
    <joint name="front_left_steering_joint" type="revolute">
        <parent link="base_link"/>
        <child link="left_kingpin"/>
        <origin xyz="0.145 0.077 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 0 1"/>
        <limit effort="${steer_effort}"
               lower="${steer_limit_deg * deg_to_rad * -1.0}" upper="${steer_limit_deg * deg_to_rad}"
               velocity="${steer_velocity}"/>
    </joint>

    <joint name="front_right_steering_joint" type="revolute">
        <parent link="base_link"/>
        <child link="right_kingpin"/>
        <origin xyz="0.145 -0.077 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 0 1"/>
        <limit effort="${steer_effort}"
               lower="${steer_limit_deg * deg_to_rad * -1.0}" upper="${steer_limit_deg * deg_to_rad}"
               velocity="${steer_velocity}"/>
    </joint>

    <!-- rear wheel joints -->
    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <origin xyz="-0.127 0.077 ${wheel_down}" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel"/>
        <origin xyz="-0.127 -0.077 ${wheel_down}" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- front wheel joints -->
    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="left_kingpin"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.0 0.00 ${wheel_down}" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>


    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="right_kingpin"/>
        <child link="front_right_wheel"/>
        <origin xyz="0.0 0.00 ${wheel_down}" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

    
</robot>
